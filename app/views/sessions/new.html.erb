<%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>
<%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>

<h1>Login</h1>
<%= form_with url: login_path, local: true do |form| %>
  <div class="form-group">
    <%= form.label :email, "Email" %>
    <%= form.email_field :email, required: true, autofocus: true, autocomplete: "email", placeholder: "Enter your email address", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :password, "Password" %>
    <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Enter your password", class: "form-control" %>
  </div>
  <%= form.submit "Sign in", class: "btn btn-primary" %>
<% end %>

<br>
<%= link_to "Forgot password?", new_password_path, class: "btn btn-primary" %>
